<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestHonchar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/main_text_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="fontFamily">@font/gilroy_medium</item>
        <item name="colorControlHighlight">@color/btn_color</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolBarTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>
</resources>